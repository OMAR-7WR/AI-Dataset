        "\n",
        "# Generate ASCII art in a fancy font\n",
        "ascii_art = pyfiglet.figlet_format(user_text, font=\"slant\")\n",
        "\n",
        "# Print the fancy text\n",
        "print(\"\\nHere is your flower-styled text: 🌷\\n\")\n",
